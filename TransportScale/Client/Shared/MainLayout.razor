@inherits LayoutComponentBase

@inject NavigationManager navigationManager

<div>
   <nav class="nav-cont" style="display: flex;
    align-items: stretch;
    flex-direction: row;
    height: 35%;
    width: 100%;
    background-color: #000000;">
       <button class="navbut" @onclick="() => NavigateToMainMenu()" @onclick:preventDefault @onclick:stopPropagation>Main Menu</button>
       <button class="navbut" @onclick="() => NavigateToJournal()" @onclick:preventDefault @onclick:stopPropagation>Journal</button>
       <button class="navbut">Adding</button>
       <img src="@imageSource" style="float:right;margin-left:25em;margin-top:1em;" width="90" height="90"/>
   </nav>
</div>
<style>
    .navbut {
        margin: 1em;
        background-color: #e4e8ed; 
        width: 250px;
        height: 80px;
        text-align: center;
        font-size: 25px;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        border: 2px solid #393c39;
        border-radius: 12px;
        cursor: pointer;
    }
    .navbut:active {
        color: #2F4F4F;
        background-color: #5F9EA0
    }
</style>
<div>
    @Body
</div>

@code {
    private string? imageSource = "https://localhost:7257/Lorry_Green.png"; 

    private void NavigateToMainMenu()
    {
        navigationManager.NavigateTo("/");
    }

    private void NavigateToJournal()
    {
        navigationManager.NavigateTo("/journal");
    }
}
