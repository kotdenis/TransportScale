<div class="row">
    <div class="col-sm-3">

    </div>
    <div class="col-sm-3">

    </div>
    <div class="col-sm-5">
        <div>
            <h2 style="font-family:Arial, Helvetica, sans-serif;font-weight:bold;">Search panel</h2>
        </div>
        <div>
            <EditForm Model="@SearchModel">
                <div>
                    <label class="form-label" id="labeldate" style="font-family:Arial, Helvetica, sans-serif;font-weight:bold;">Search by date</label>
                </div>
                <div>
                    <InputDate class="form-control" @bind-Value="SearchModel.DateOfWeighing"></InputDate>
                </div>
                <div>
                    <label class="form-label" id="labeldate" style="font-family:Arial, Helvetica, sans-serif;font-weight:bold;">Search by car plate</label>
                </div>
                <div>
                    <InputText class="form-control" @bind-Value="SearchModel.CarPlate"></InputText>
                </div>
            </EditForm>
            <div class="mt-2">
                    <button id="buttonSearch" @onclick="async () => await SearchWeighingAsync()" 
                         @onclick:preventDefault @onclick:stopPropagation style="margin-bottom:2em;">
                         <span class="fa-solid fa-magnifying-glass" style="float:left;margin-top:0.3em;"></span>Search</button>
                    <button id="buttonBack" @onclick="async() => await ReturnToTotalAsync()" 
                         @onclick:preventDefault @onclick:stopPropagation style="margin-bottom:2em;margin-right:1em">
                         <span class="fa-solid fa-arrow-rotate-left" style="float:left;margin-top:0.3em;"></span>Back to all</button>
            </div>
        </div>
    </div>
</div>
<style>
    #buttonSearch {
        min-width: 200px;
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
        height: 40px;
        border-radius: 7px;
        cursor: pointer;
        background-color: #5F9EA0;
        margin-top: 2em;
        float:right;
    }

    #buttonSearch:active {
        background-color: #4682B4
    }

    #buttonBack {
        min-width: 200px;
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
        height: 40px;
        border-radius: 7px;
        cursor: pointer;
        background-color: #5F9EA0;
        margin-top: 2em;
        float:right;
    }

    #buttonBack:active {
        background-color: #4682B4
    }
</style>


@code {


    [Parameter]
    public SearchModel SearchModel { get; set; }
    [Parameter]
    public Func<Task> SearchWeighingAsync { get; set; } 
    [Parameter]
    public Func<Task> ReturnToTotalAsync { get; set; }

}
