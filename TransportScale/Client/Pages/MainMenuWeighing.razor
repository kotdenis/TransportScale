<div style="background-color: #2F4F4F;margin: 10px;min-height: 550px">
          <form>
              <div style="text-align: center">
                  <label class="label-control" id="labelWeighing" >Weghing</label>
              </div>
              <div style="margin: auto">
                  <input class="form-control" id="inputWeighing" @bind-value="Weight" readonly/>
              </div>
              <div>
                  <label class="label-control" id="labelCarBrand">Car brand</label>
              </div>
              <div>
                  <input class="form-control" id="inputCarBrand" @bind-value="CarBrand" readonly/>
              </div>
              <div>
                  <label class="label-control" id="labelCarPlate">Car plate</label>
              </div>
              <div>
                  <input class="form-control" id="inputCarPlate" @bind-value="CarPlate" readonly/>
              </div>
              <div>
                  <label class="label-control" id="labelCargo">Imported cargo</label>
              </div>
              <div>
                  <input class="form-control" id="inputCargo" @bind-value="ImportedCargo" readonly/>
              </div>
          </form>
          <div>
              <button id="buttonAccept" @onclick="async _ => await AcceptCarAsync()"><span class="fa-solid fa-truck" style="float:left;margin-top:0.3em;"></span>Accept car</button>
          </div>
          <div>
              <button id="buttonWeghing" @onclick="async _ => await BeginWeighingAsync()" @onclick:preventDefault @onclick:stopPropagation>
                  <span class="fa-solid fa-gauge" style="float:left;margin-top:0.3em;"></span>Begin weighing</button>
          </div>
          <div>
              <button id="buttonSave" @onclick="async _ => await SaveWeighingAsync()" @onclick:preventDefault @onclick:stopPropagation>
                  <span class="fa-solid fa-upload" style="float:left;margin-top:0.3em;"></span>Save weighing</button>
          </div>
      </div>
      <style>
         #labelWeighing {
            margin: auto;
            color: #FFFFFF;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            text-align: center
            }

        #inputWeighing {
            width: 40%;
            height: 50px;
            font-size: 40px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            margin: auto;
            background-color: #008080
        }

        #labelCarBrand {
            color: #FFFFFF;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            margin-left: 10px
        }

        #inputCarBrand {
            width: 70%;
            margin-left: 10px;
            background-color: #8FBC8F;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold
        }

        #labelCarPlate {
            color: #FFFFFF;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            margin-left: 10px
        }

        #inputCarPlate {
            width: 70%;
            margin-left: 10px;
            background-color: #8FBC8F;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold
        }

        #labelCargo {
            color: #FFFFFF;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            margin-left: 10px
        }

        #inputCargo {
            width: 70%;
            margin-left: 10px;
            background-color: #8FBC8F;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold
        }

        #buttonAccept {
            margin-left: 1em;
            min-width: 200px;
            font-weight: bold;
            font-family: Arial, Helvetica, sans-serif;
            height: 40px;
            border-radius: 7px;
            cursor: pointer;
            background-color: #5F9EA0;
            margin-top: 70px
        }

        #buttonAccept:active{
            background-color: #4682B4
        }

        #buttonWeghing {
            margin-left: 1em;
            min-width: 200px;
            font-weight: bold;
            font-family: Arial, Helvetica, sans-serif;
            height: 40px;
            border-radius: 7px;
            cursor: pointer;
            background-color: #5F9EA0;
            margin-top: 10px
        }

        #buttonWeghing:active {
            background-color: #4682B4
        }

        #buttonSave {
            margin-left: 1em;
            min-width: 200px;
            font-weight: bold;
            font-family: Arial, Helvetica, sans-serif;
            height: 40px;
            border-radius: 7px;
            cursor: pointer;
            background-color: #5F9EA0;
            margin-top: 10px
        }

        #buttonSave:active {
            background-color: #4682B4
        }

      </style>

@code {
    [Parameter]
    public int Weight { get; set; }
    [Parameter]
    public string CarBrand { get; set; } = string.Empty;
    [Parameter]
    public string CarPlate { get; set; } = string.Empty;
    [Parameter]
    public string ImportedCargo { get; set; } = string.Empty;

    [Parameter]
    public Func<Task> AcceptCarAsync { get; set; }
    [Parameter]
    public Func<Task> BeginWeighingAsync { get; set; }
    [Parameter]
    public Func<Task> SaveWeighingAsync { get; set; }
}
