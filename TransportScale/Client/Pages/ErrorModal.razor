<div class="modal" tabindex="-1" id="modalError">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" style="font-family:Arial, Helvetica, sans-serif;font-weight: bold;">Error</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть" @onclick="async _ => await CloseModal()" 
          style="background-color: red;"></button>
        </div>
        <div class="modal-body" style="background-color: red;">
          <p style="font-family:Arial, Helvetica, sans-serif;">@ErrorText</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="async _ => await CloseModal()">Close</button>
        </div>
      </div>
    </div>
  </div>

@code {

    [Parameter]
    public Func<Task> CloseModal { get; set; }
    [Parameter]
    public string ErrorText { get; set; } = string.Empty;

}
